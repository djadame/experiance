import 'package:flutter/cupertino.dart';
import 'package:flutter/material.dart';


class MyHomePage extends StatefulWidget {
  @override
  State<MyHomePage> createState() =>_MyHomePageState();
  // const MyHomePage({Key? key}) : super(key: key);
  //
  // @override
  // _MyHomePageState createState() => _MyHomePageState();
}

class _MyHomePageState extends State<MyHomePage> {
  int _currentIndex = 0;
  late PageController _pageController;

  @override
  void initState() {
    super.initState();
    _pageController = PageController();
  }

  @override
  void dispose() {
    _pageController.dispose();
    super.dispose();
  }

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        body: SizedBox.expand(
          child: PageView(
            controller: _pageController,
            onPageChanged: (index) {
              setState(() {
                _currentIndex = index;
              });
            },
            children: [
              Container(
                color: Colors.grey,
              ),
              Container(
                color: Colors.grey,
              ),
              Container(
                color: Colors.grey,
              ),
              Container(
                color: Colors.grey,
              ),
            ],
          ),
        ),
        bottomNavigationBar: BottomNavyBar(
          selectedIndex: _currentIndex,
          onItemSelected: (index) {
            setState(() {
              _currentIndex = index;
              _pageController.jumpToPage(index);
            });
          },
          items: <BottomNavyBarItem>[
            BottomNavyBarItem(title: Text("Menu"), icon: Icon(Icons.apps)),
            BottomNavyBarItem(title: Text("Home"), icon: Icon(Icons.home)),
            BottomNavyBarItem(title: Text("Ajouter"), icon: Icon(Icons.add)),
            BottomNavyBarItem(title: Text("Profile"), icon: Icon(Icons.person)),
            BottomNavyBarItem(
                title: Text("Notification"), icon: Icon(Icons.notifications)),
          ],
        ),
      ),
    );
  }

  Widget buildPages() {
    switch (_currentIndex) {
      case 0:
        return buildHomeIcons();
      case 1:
        return buildAddIcons();
      case 2:
        return buildPersonIcons();
      case 3:
        return buildNotificationIcons();
      default:
        return Container();
    }
  }

  Widget buildHomeIcons() {
    return Column(
      children: [
        buildImageProfile(),
        buildTitleSection(),
        buildLineSection(),
        buildSearchSection(),
        buildBoxSection(),
        Expanded(
          child: GridView.count(
            crossAxisCount: 2,
            // Ajoutez d'autres widgets ici si nécessaire
          ),
        ),
      ],
    );
  }

  Widget buildImageProfile() {
    return CircleAvatar(
      radius: 30,
      backgroundImage: AssetImage('assets/SOKO.png'),
    );
  }

  Widget buildTitleSection() {
    return Container(
      padding: const EdgeInsets.all(16),
      child: Text(
        'Titre de la section',
        style: TextStyle(
          fontSize: 18,
          fontWeight: FontWeight.bold,
        ),
      ),
    );
  }

  Widget buildLineSection() {
    return Padding(
      padding: EdgeInsets.symmetric(horizontal: 20, vertical: 10),
      child: Container(
        height: 1,
        color: Colors.grey,
      ),
    );
  }

  Widget buildSearchSection() {
    return Container(
      padding: const EdgeInsets.all(10),
      child: TextField(
        decoration: InputDecoration(
          hintText: 'Rechercher...',
          prefixIcon: Icon(Icons.search),
          border: OutlineInputBorder(
            borderRadius: BorderRadius.circular(8),
          ),
        ),
      ),
    );
  }

  Widget buildBoxSection() {
    return Container(
      height: 200,
      width: double.infinity,
      margin: EdgeInsets.all(20),
      padding: EdgeInsets.all(20),
      decoration: BoxDecoration(
        borderRadius: BorderRadius.circular(10),
        gradient: LinearGradient(
          colors: [Colors.blue, Colors.green],
        ),
      ),
      child: Column(
        mainAxisAlignment: MainAxisAlignment.start,
        crossAxisAlignment: CrossAxisAlignment.start,
        children: [
          Text(
            'Title',
            style: TextStyle(color: Colors.white, fontSize: 30),
          ),
          Text("Subtitle"),
          ElevatedButton(
            onPressed: () {},
            style: ElevatedButton.styleFrom(
              primary: Colors.orange,
              onPrimary: Colors.grey,
            ),
            child: Text('Buy'),
          ),
        ],
      ),
    );
  }
}


  Widget buildAddIcons() {
    return GridView.count(
      crossAxisCount: 2,
    );
  }

  Widget buildPersonIcons() {
    return GridView.count(
      crossAxisCount: 2,
    );
  }

  Widget buildNotificationIcons() {
    return GridView.count(
      crossAxisCount: 2,
    );
  }

